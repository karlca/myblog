<p id="notice"><%= notice %></p>
<div class="content-body">
    <div class="container">
        <div class="row">
          <!--博客列表-->
            <main class="col-md-8">
                <% @posts.each do |post| %>
                <article class="post post-1">
                    <header class="entry-header">
                        <h1 class="entry-title">
                            <a href="<%= post_path(post) %>" class="face"><%= post.title %></a>
                        </h1>
                        <div class="entry-meta ">
                            <span class="post-category"><%= post.category.name %></span>
                            <span class="post-date"><time class="entry-date"
                                                                      datetime="2012-11-09T23:15:57+00:00"><%= post.created_at %></time></span>
                            <span class="comments-link"><%= post.readcount %> 阅读</span>
                            <span class="views-count">588 评论</span>
                        </div>
                    </header>
                  <div class="entry-content clearfix">
                    <p><%= post.description %></p>
                  </div>
                </article>
                <% end %>
              <div class="facepagination" >
                 <%= paginate @posts, window: 2 %>
              </div>
            </main>
            <%= render "shared/targ" %>
        </div>
    </div>
</div>
